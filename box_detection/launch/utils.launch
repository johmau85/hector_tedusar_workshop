<?xml version="1.0"?>
<launch>
  <!-- Launches OpenNI and a static transform publisher from base_link (whatever that is to you) to camera_link. -->
  
  <include file="$(find openni_launch)/launch/openni.launch" />
  <node pkg="tf" type="static_transform_publisher" name="base_link_camera_link_tf_pub" args="0.0 0.0 0.45 0.0 0.5 0.0 base_link camera_link 5"/>
</launch>

