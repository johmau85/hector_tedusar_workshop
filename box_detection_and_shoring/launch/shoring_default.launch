<?xml version="1.0"?>
<launch>
    <include file="$(find schunk_lwa4p_control)/launch/schunk_lwa4p_control.launch" />
    <include file="$(find schunk_teleop)/launch/teleop_default.launch" />

    <include file="$(find box_detection)/launch/box_detection.launch">
      <arg name="point_cloud_topic" value="/asus/depth/points" />
    </include>

    <include file="$(find openni2_launch)/launch/openni2.launch">
      <arg name="camera" value="asus" />
      <arg name="publish_tf" default="false" />
    </include>
    
    <include file="$(find shoring_behaviour)/launch/shoring_behaviour_default.launch" />

    <!-- Static transform publisher for "heap" of boxes to use for shoring: -->
    <node pkg="tf" type="static_transform_publisher" name="heap_link_broadcaster" args="0.5 0.0 0.2 0 0 0 base_link heap 100" />

    <node pkg="box_detection_and_shoring" type="shoring_node" name="shoring" output="screen">
    </node>
</launch>

